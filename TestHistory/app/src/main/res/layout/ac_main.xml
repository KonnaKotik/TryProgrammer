<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.konna.testhistory.activities.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.551"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/ageOneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Древний мир" />

        <Button
            android:id="@+id/ageThreeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Средние века" />

        <Button
            android:id="@+id/ageTwoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Современность" />

        <Button
            android:id="@+id/ageFourButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Новый мир" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:text="      Выберите тему"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>
